<form class="edit" action="{{#if note}}/note/{{note._id}}{{else}}/note/create{{/if}}" method="post">
    {{#if note}}
        <input type="hidden" name="_method" value="PUT">
    {{/if}}
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{#if note}}{{note.title}}{{/if}}" required>
    <br>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required>{{#if note}}{{note.description}}{{/if}}</textarea>
    <br>
    <label for="importance">Importance (1-5):</label>
    <input type="number" id="importance" name="importance" min="1" max="5" value="{{#if note}}{{note.importance}}{{/if}}" required>
    <br>
    <label for="dueDate">Due Date:</label>
    <input type="date" id="dueDate" name="dueDate" value="{{#if note}}{{note.dueDate}}{{/if}}" required>
    <br>
    <label for="completed">Completed:</label>
    <input type="checkbox" id="completed" name="completed" {{#if note.completed}}checked{{/if}}>
    <br>
    <input type="submit" value="{{#if note}}Update Note{{else}}Create Note{{/if}}">
</form>